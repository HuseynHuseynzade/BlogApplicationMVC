@model IEnumerable<BlogMvcApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Lists</h2>
<hr />
<p>
    @Html.ActionLink("Add Blog", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (BlogMvcApp.Models.Blog)TempData["Blog"];

<div class="alert alert-success" role="alert">
    <strong><span class="glyphicon glyphicon-ok"></span> @blog.Header   </strong> It saved.
</div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.İmage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePage)
        </th>
        <th style="width:150px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.İmage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @if (item.Approval)
                {
                <label class="label label-success">Approved</label>
                }
                else
                {
                <label class="label label-danger">Waiting for approval</label>
                }
            </td>
            <td>
                @if (item.HomePage)
                {
                    <label class="label label-success">Home Page</label>
                }
                else
                {
                    <label class="label label-danger">Not Home Page</label>
                }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
